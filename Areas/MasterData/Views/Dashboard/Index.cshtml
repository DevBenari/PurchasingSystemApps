<script src="https://cdn.jsdelivr.net/npm/apexcharts@3.37.1/dist/apexcharts.min.js" integrity="sha256-+vh8GkaU7C9/wbSLIcwq82tQ2wTf44aOHA8HlBMwRI8=" crossorigin="anonymous"></script>
<script>
    $.ajax({
        type: "POST",
        url: '@Url.Action("Json")',
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (r) {
            console.log(r);

            const donutChart = r.userResult;
            // Consume data
            const byDate = [];
            const countOfUsers = [];
            for (i = 0; i < donutChart.length; i++) {
                const resultCount = donutChart[i].countOfUsers
                const resultDate = donutChart[i].userActiveId

                byDate.push(resultCount);
                countOfUsers.push(resultDate);
            }

            // Donut Chart
            var options = {
                chart: {
                    width: 550,
                    type: 'donut',
                },
                labels: countOfUsers,
                series: byDate,
                legend: {
                    position: 'bottom',
                    horizontalAlign: 'center'
                },
                dataLabels: {
                    formatter: function (val, opts) {
                        return opts.w.config.series[opts.seriesIndex]
                    },
                },
            }

            var chart = new ApexCharts(
                document.querySelector("#revenue-chart"),
                options);
            chart.render();
        }
    });

</script>
<script>
    $.ajax({
        type: "POST",
        url: '@Url.Action("Json")',
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (r) {
            const barChart = r.productResult;
            //Bar Chart
            const byPrinciple = [];
            const countOfProduct = [];
            for (i = 0; i < barChart.length; i++) {
                const resultCount = barChart[i].countOfProduct
                const resultProduct = barChart[i].productId

                byPrinciple.push(resultCount);
                countOfProduct.push(resultProduct);
            }
            console.log(byPrinciple);
            const chart_options = {
                series: [{
                    name: "Product",
                    data: byPrinciple,
                }
                ],
                chart: {
                    type: "bar",
                    height: 371,
                },
                plotOptions: {
                    bar: {
                        horizontal: false,
                        columnWidth: "55%",
                        endingShape: "rounded",
                    },
                },
                legend: {
                    show: false,
                },
                colors: ["#0d6efd", "#20c997", "#ffc107"],
                dataLabels: {
                    enabled: false,
                },
                stroke: {
                    show: true,
                    width: 2,
                    colors: ["transparent"],
                },
                xaxis: {
                    categories: ["BAYER INDONESIA, PT", "ASTRA ZENECA, PT", "ACTAVIS, PT", "ABBOT, PT"],
                },
                fill: {
                    opacity: 1,
                }
            };

            const product_chart = new ApexCharts(
                document.querySelector("#chart"),
                chart_options
            );
            product_chart.render(); //barchart
        }
    });
</script>
